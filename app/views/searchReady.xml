<Alloy>
	
	<ScrollView  class="containerScroll" showPagingControl="false" id="containerScroll" > 
		
		<View class="viewContainer" id="viewContainer" >
			
			<!-- PAIS -->
			<TextArea class="combo" id="comboCountry" platform="ios"  touchEnabled="true"  ></TextArea>
			<View platform="android" class="combo" id="comboCountry" ></View>
	
			
				<!-- DESTINO SÓLO SI EL PAÍS ES ESPAÑA -->
				<TextArea class="combo" id="comboDestinySpain" platform="ios"  touchEnabled="true" ></TextArea>
				<View platform="android" class="combo" id="comboDestinySpain" ></View>
	
		
					<!-- ZONAS SÓLO SI EL PAÍS ES ESPAÑA -->
					<TextArea class="combo" id="comboZonesSpain" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo" id="comboZonesSpain"></View>
					
			
				<!-- DESTINO PARA EL RESTO DE PAÍSES -->
				<View class="containerDestiny" id="containerDestiny">
					<TextField class="combo2" id="comboDestiny" hintText="Elige el destino..."></TextField>
					<Button class="destiny_button" id="buttonDestiny" title="Buscar" ></Button>
				</View>
			
			
			<!-- FECHA DE ENTRADA -->	
			<View class="combo" id="comboDateIn"  editable="false">
				<Label id="text_comboDateIn" class="text_comboDate" text="L('text_25')"></Label>
			</View>	
			
			<!-- FECHA DE SALIDA -->
			<View class="combo" id="comboDateOut"  editable="false">	
				<Label id="text_comboDateOut" class="text_comboDate" text="L('text_26')"></Label>
			</View>
			
			<!-- NÚMERO DE HABITACIONES -->
			<TextArea class="combo" id="comboRooms" platform="ios"  touchEnabled="true"  ></TextArea>
			<View platform="android" class="combo" id="comboRooms" ></View>
			
				<!-- HABITACIÓN 1 -->
				<Label text="L('text_28')" id="textRoom1" class="headline"></Label>
				<View class="containerHorizontal" id="containerRoom1">
					<TextArea class="combo3" id="comboAdult1" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo3" id="comboAdult1" ></View>
					
					<TextArea class="combo4" id="comboChildren1" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo4" id="comboChildren1" ></View>
				</View>
				<!-- edad de los niños -->
				<View class="containerHorizontal" id="containerRoom1"> 
					<TextArea class="combo3" id="comboAge1" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo3" id="comboAge1" ></View>
					
					<TextArea class="combo4" id="comboAge2" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo4" id="comboAge2" ></View>
				</View>
				
				
				<!-- HABITACIÓN 2 -->
				<Label text="L('text_29')" id="textRoom2" class="headline"></Label>
				<View class="containerHorizontal" id="containerRoom2">
					<TextArea class="combo3" id="comboAdult2" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo3" id="comboAdult2" ></View>
					
					<TextArea class="combo4" id="comboChildren2" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo4" id="comboChildren2" ></View>
				</View>
				<!-- edad de los niños -->
				<View class="containerHorizontal" id="containerRoom2_2"> 
					<TextArea class="combo3" id="comboAge3" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo3" id="comboAge3" ></View>
					
					<TextArea class="combo4" id="comboAge4" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo4" id="comboAge4" ></View>
				</View>
				
				
				<!-- HABITACIÓN 3 -->
				<Label text="L('text_30')" id="textRoom3" class="headline"></Label>
				<View class="containerHorizontal" id="containerRoom3">
					<TextArea class="combo3" id="comboAdult3" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo3" id="comboAdult3" ></View>
					
					<TextArea class="combo4" id="comboChildren3" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo4" id="comboChildren3" ></View>
				</View>
				<!-- edad de los niños -->
				<View class="containerHorizontal" id="containerRoom3_3"> 
					<TextArea class="combo3" id="comboAge5" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo3" id="comboAge5" ></View>
					
					<TextArea class="combo4" id="comboAge6" platform="ios"  touchEnabled="true"  ></TextArea>
					<View platform="android" class="combo4" id="comboAge6" ></View>
				</View>
			
			
			
			
				
			<Button class="search_button" id="id_buttonLogin" title="L('text_13')" onClick="handler_initSearch"></Button>
			
			<Label editable="false" class="search_text" text="L('text_14')"></Label>
							
	</View>
	
	</ScrollView>	
	
</Alloy>